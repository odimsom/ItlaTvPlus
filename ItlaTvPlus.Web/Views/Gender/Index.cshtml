@using ItlaTvPlus.Application.ViewModels.NewFolder.GenderViewModels
@model List<GenderViewModel>
@{
    ViewData["Title"] = "Mant. Gender";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Géneros</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Crear Género
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var gender in Model)
        {
            <div class="col">
                <div class="card h-100 bg-light border-0 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@gender.Name</h5>
                        <p class="card-text text-muted">@gender.Description</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@gender.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                            <form asp-action="Delete" asp-route-id="@gender.Id" method="post" onsubmit="return confirm('¿Estás seguro de eliminar este género?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>